.content
  .wrapper
    .container
      .content__title(text=contentTitle.key) !{contentTitle.text}
      .content__top-description.content__description(text=contentTopText.key) !{contentTopText.text}

      .content__wrapper
        for i in atHomeContent
          a.content__preview.content__preview--home(href=i.link)
            .content__image-wrapper
              img.content__preview-image(alt="Превью квеста", src=i.image)
            .content__text-wrapper
              h3.content__preview-title(text=i.titlekey) !{i.title}
              p.content__preview-text(text=i.key) !{i.description}

      .content__middle-description.content__description(text=contentMiddleText.key) !{contentMiddleText.text}
      .content__wrapper
        for i in inCityContent
          a.content__preview.content__preview--city(href=i.link)
            .content__image-wrapper
              img.content__preview-image(alt="Превью квеста", src=i.image)
