block vars
  -
    var topNavLinks = [
      {link: 'https://web.waym.app/quests', name: 'Перейти к квестам' , key: 'goToQuests'},
      {link: 'https://web.waym.app/quests', name: 'Квесты', key : 'quests'},
      {link:'./business.html', name:'Бизнесу', key: 'business'}
    ]
    var bottomNavLinks = [
      {link: 'https://web.waym.app/quests', name: 'Перейти к квестам', key: 'goToQuests'},
      {link: './business.html', name: 'Бизнесу', key: 'business'},
      {link: './terms.html', name: 'Соглашения', key : 'conditions'}
    ]

    var headerTitle = {text: 'Развлечение нового формата', key: 'headerTitleIndex'}
    var contentTitle = {text: 'Гляди, что у нас уже есть', key: 'contentTitle'}
    var contentTopText = {text: 'Проходи квесты <br>не выходя из дома', key: 'contentTopText'}
